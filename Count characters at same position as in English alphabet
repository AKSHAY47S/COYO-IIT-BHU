#include <bits/stdc++.h>
using namespace std;

int main() {
	string s; cin>>s;
	int n=s.length();
	int ans=0;
	for(int i=0;i<n;i++)
	{
	    if(isupper(s[i]))
	    {
	        int val= s[i]-'A';
	         if(val==i)
	           ans++;
	    }
	    else
	    {
	        int val= s[i]-'a';
	         if(val==i)
	           ans++;
	    }
	}
	
	cout<<ans<<endl;
	

	return 0;
}
